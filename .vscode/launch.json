{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug PUSH SWAP",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/push_swap",
        "args": ["1 3 4 2"], 
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Habilitar a reformatação automática para gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "preLaunchTask": "build",
        "miDebuggerPath": "/usr/bin/gdb", // Caminho para o gdb, ajuste conforme necessário
        "logging": {
          "engineLogging": true
        },
        "internalConsoleOptions": "openOnSessionStart"
      }
    ]
  }